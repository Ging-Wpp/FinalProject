<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        tools:context="com.example.colorblindassistance.MainActivity" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="COLOR BLIND ASSISTANCE"
            android:fontFamily="@font/heavitas"
            android:layout_marginTop="230dp"
            android:textSize="45dp"
            android:textColor="@color/white" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_gravity="center_vertical|center_horizontal">

            <Button
                android:id="@+id/fcolor_btn"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:padding="18dp"
                android:text="@string/fcolor"
                android:drawableLeft="@drawable/color"
                android:background="@drawable/ripple_effect_raised"
                android:textColor="@color/white"
                android:textSize="@dimen/small"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal">

            <Button
                android:id="@+id/fobj_btn"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:padding="14dp"
                android:drawableLeft="@drawable/search"
                android:text="@string/fobj"
                android:textColor="@color/white"
                android:background="@drawable/ripple_effect_raised"
                android:textSize="@dimen/small" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>